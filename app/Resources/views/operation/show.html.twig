{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ operation.montant }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{% if operation.type %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-link" href="{{ path('op_index') }}"><i class="fa fa-chevron-left"></i> Back to the list</a>

{% endblock %}
